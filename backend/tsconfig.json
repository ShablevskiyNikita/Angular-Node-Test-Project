{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.html"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": ["es2015"]
}
